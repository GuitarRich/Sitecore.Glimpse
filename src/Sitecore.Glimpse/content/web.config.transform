<?xml version="1.0"?>
<configuration>
  <appSettings>
  	<add key="Glimpse:DisableAsyncSupport" value="true" />
  </appSettings>
  <glimpse defaultRuntimePolicy="On" endpointBaseUri="~/Glimpse.axd">
    <runtimePolicies>
      <uris>
        <add regex=".*/sitecore.*"/>
        <add regex=".*\?.*sc_mode=edit.*" />
        <add regex=".*\?.*sc_mode=preview.*" />
      </uris>
    </runtimePolicies>
  </glimpse>
</configuration>